---
import Contact from "../components/shared/Contact.astro";
import Navbar from "../components/shared/Navbar.astro";
---

<html lang="en" class="dark">
  <script>
    const theme = localStorage.getItem("theme");
    if (theme === "dark" || !theme) {
      document.documentElement.className = "dark";
    }
  </script>

  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width" />
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <meta name="generator" content={Astro.generator} />
  <title>AVR</title>
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link
    href="https://fonts.googleapis.com/css2?family=DM+Serif+Display:ital@0;1&family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&display=swap"
    rel="stylesheet"
  />
  <link
    href="https://fonts.googleapis.com/css2?family=Cal+Sans&display=swap"
    rel="stylesheet"
  />
  <script
    src="https://unpkg.com/@dotlottie/player-component@2.7.12/dist/dotlottie-player.mjs"
    type="module"></script>

  <body class="bg-[var(--background)] text-[var(--text)]">
    <Navbar />
    <main>
      <slot />
    </main>
    <Contact />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
